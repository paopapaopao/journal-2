<%= form_with model: [@category, @category.tasks.build] do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :priority, 'Priority Date' %>
  <%= f.datetime_field :priority, id: 'datepicker', type: '' %>
  <%= f.submit %>
<% end %>
